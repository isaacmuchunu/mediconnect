{
  "name": "MediConnect Mobile Dispatch",
  "short_name": "MediConnect",
  "description": "Mobile dispatch application for ambulance crews and emergency responders",
  "start_url": "/mobile/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#dc2626",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en-US",
  "categories": ["medical", "emergency", "productivity"],
  "icons": [
    {
      "src": "/static/images/logo-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/logo-96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/logo-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/logo-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/logo-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/logo-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/logo-384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/static/images/logo-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Current Dispatch",
      "short_name": "Dispatch",
      "description": "View current dispatch assignment",
      "url": "/mobile/dispatch/current/",
      "icons": [
        {
          "src": "/static/images/dispatch-icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Update Status",
      "short_name": "Status",
      "description": "Update ambulance status",
      "url": "/mobile/status/",
      "icons": [
        {
          "src": "/static/images/status-icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Emergency Protocols",
      "short_name": "Protocols",
      "description": "View emergency protocols",
      "url": "/mobile/protocols/",
      "icons": [
        {
          "src": "/static/images/protocol-icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Navigation",
      "short_name": "Navigate",
      "description": "GPS navigation to destination",
      "url": "/mobile/navigation/",
      "icons": [
        {
          "src": "/static/images/nav-icon-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/static/images/screenshot-mobile-1.png",
      "sizes": "320x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile dispatch dashboard"
    },
    {
      "src": "/static/images/screenshot-mobile-2.png",
      "sizes": "320x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "GPS navigation interface"
    },
    {
      "src": "/static/images/screenshot-tablet-1.png",
      "sizes": "768x1024",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Tablet dispatch interface"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.mediconnect.dispatch",
      "id": "com.mediconnect.dispatch"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/mediconnect-dispatch/id123456789",
      "id": "123456789"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+mediconnect",
      "url": "/mobile/handle/?dispatch=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/mobile/import/",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/mobile/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  }
}
