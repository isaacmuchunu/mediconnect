# ==================================================
# MediConnect Hospital E-Referral System
# Environment Configuration Template
# ==================================================

# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# ==================================================
# CORE DJANGO SETTINGS
# ==================================================
SECRET_KEY=your_very_long_and_secure_secret_key_here_minimum_50_characters
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
DATABASE_URL=postgresql://username:password@localhost:5432/hospital_ereferral
# Alternative individual settings:
# DATABASE_NAME=hospital_ereferral
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_secure_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# ==================================================
# REDIS CONFIGURATION
# ==================================================
REDIS_URL=redis://localhost:6379/0
USE_REDIS=True
CELERY_BROKER_URL=redis://localhost:6379/1

# ==================================================
# SECURITY SETTINGS
# ==================================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ==================================================
# EMAIL CONFIGURATION
# ==================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# ==================================================
# SMS/COMMUNICATION SERVICES
# ==================================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==================================================
# GOOGLE SERVICES
# ==================================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_GEOCODING_API_KEY=your_google_geocoding_api_key

# ==================================================
# EXTERNAL INTEGRATIONS
# ==================================================
# Hospital Management System APIs
HMS_API_BASE_URL=https://your-hms-api.com/api/v1
HMS_API_KEY=your_hms_api_key

# Lab System Integration
LAB_SYSTEM_API_URL=https://lab-api.com/api
LAB_SYSTEM_API_KEY=your_lab_api_key

# ==================================================
# MONITORING & LOGGING
# ==================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# ==================================================
# BACKUP CONFIGURATION
# ==================================================
BACKUP_STORAGE_URL=s3://your-backup-bucket/
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-west-2

# ==================================================
# PERFORMANCE SETTINGS
# ==================================================
CACHE_TIMEOUT=300
SESSION_COOKIE_AGE=3600
API_RATE_LIMIT_ANON=100/hour
API_RATE_LIMIT_USER=1000/hour

# ==================================================
# GDAL/GIS CONFIGURATION
# ==================================================
GDAL_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgdal.so
GEOS_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgeos_c.so

# ==================================================
# HIPAA COMPLIANCE
# ==================================================
HIPAA_COMPLIANCE_MODE=True
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_ENCRYPTION_KEY=your_32_byte_encryption_key_hex_encoded

# ==================================================
# DEVELOPMENT SETTINGS (Set to False in production)
# ==================================================
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK_PROFILING=False
CORS_ALLOW_ALL_ORIGINS=False

# ==================================================
# CORS CONFIGURATION FOR PRODUCTION
# ==================================================
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-mobile-app.com